@{
    ViewData["Title"] = "Home Page";
    string controller = "Controller";
}

@model IEnumerable<PblDAL.Models.Controller>;
<div class="text-center">
    <h1 class="display-4">Контроллеры</h1>
</div>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<table class="table">
    <thead>
        <tr>
            <th>Адрес - IP / URL &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; Адрес slave &nbsp; &nbsp; Порт</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>
                    @using (Html.BeginForm("Update", controller, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <input type="hidden" name="Id" value="@m.Id" />
                        <input class="form-control address" type="text" name="Address" value="@m.Address">
                        <input class="form-control slave" type="text" name="SlaveAddress" value="@m.SlaveAddress">
                        <input class="form-control port" type="text" name="Port" value="@m.Port">
                        <button class="btn btn-default btn-sm glyphicon glyphicon-floppy-disk save" type="submit"></button>
                    }
                </td>
                <td>
                    <button class="btn btn-default btn-sm glyphicon glyphicon-remove" 
                            onclick="location.href='@controller/Delete?id=@m.Id'">
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<button type="submit" class="btn btn-default btn-sm create" onclick="location.href='@controller/Create'">Добавить</button>

<style>
    .address {
        display: inline-block;
        width: 135px;
        margin-right: 10px;
        background: #f3f3f3;				
		border: none;
    }

    .slave, .port {
        display: inline-block;
        width: 100px;
    }

    .table {
        width: 460px;
        margin: 0 auto;
        margin-bottom: 10px;
    }

    .create {
        display: block;
        width: 200px;
        margin: 0 auto;
    }

    .glyphicon-remove {
        margin-top: 3px;
    }
</style>